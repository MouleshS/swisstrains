<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="@dimen/USER_IMG_WH"
        android:layout_height="@dimen/USER_IMG_WH"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/LARGE_MARGIN" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/MEDIUM_MARGIN" />

    <TextView
        android:id="@+id/search_con_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/BIG_MARGINXX"
        android:layout_marginRight="@dimen/BIG_MARGINXX"
        android:layout_marginTop="@dimen/MEDIUM_MARGIN"
        android:background="@drawable/rouded_corner_red_background"
        android:gravity="center_horizontal"
        android:padding="@dimen/MEDIUM_MARGIN"
        android:text="@string/search_con"
        android:textColor="@color/col_white" />

    <TextView
        android:id="@+id/fav_con_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/BIG_MARGINXX"
        android:layout_marginRight="@dimen/BIG_MARGINXX"
        android:layout_marginTop="@dimen/MEDIUM_MARGIN_XX"
        android:background="@drawable/rounded_corner_gray_background"
        android:gravity="center"
        android:padding="@dimen/MEDIUM_MARGIN"
        android:text="@string/fav_con"
        android:textColor="@color/col_white" />
</LinearLayout>